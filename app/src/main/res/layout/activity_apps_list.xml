<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.passwords.AppsListActivity">

        <TextView
            android:id="@+id/title_apps"
            android:text="@string/my_apps"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/default_text_color"
            android:layout_marginTop="@dimen/default_border_margin"
            android:layout_marginEnd="@dimen/default_border_margin"
            android:layout_marginStart="@dimen/default_border_margin"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <View
            android:id="@+id/title_separator"
            android:layout_below="@+id/title_apps"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/default_border_margin"
            android:layout_marginStart="@dimen/default_border_margin"
            android:layout_marginEnd="@dimen/default_border_margin"
            android:background="@color/default_text_color"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/apps_recycler"
            android:layout_below="@+id/title_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_border_margin"
            android:layout_marginStart="@dimen/default_border_margin"
            android:layout_marginBottom="60dp"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/element_margin_medium"
            android:src="@drawable/baseline_add_white_48dp"
            android:tint="@color/default_text_color"
            app:fabSize="normal"
            android:id="@+id/add_app"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_toStartOf="@+id/add_app"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/element_margin_medium"
            android:src="@drawable/ic_baseline_arrow_back_ios_24_black"
            android:tint="@color/default_text_color"
            app:fabSize="normal"
            android:id="@+id/floating_back"
            />

        <TextView
            android:id="@+id/tv_no_item"
            android:text="@string/no_element_found"
            android:textAlignment="center"
            android:textColor="@color/default_text_color"
            android:textStyle="italic"
            android:textSize="@dimen/title_text_size_small_15"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/element_margin_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />


    </RelativeLayout>
</layout>