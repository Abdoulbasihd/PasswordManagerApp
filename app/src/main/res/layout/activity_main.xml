<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_border_margin"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="190dp"
                android:layout_height="250dp"
                app:cardElevation="@dimen/default_card_elevation"
                android:layout_margin="@dimen/default_element_margin"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/card_my_password"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/default_element_margin"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        app:cardElevation="@dimen/default_card_elevation"
                        >
                        <ImageView
                            android:layout_width="170dp"
                            android:layout_height="180dp"
                            android:src="@drawable/twotone_key_blue_800_48dp"
                            android:layout_margin="@dimen/default_element_margin"
                            />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_passwords"
                        android:textSize="@dimen/title_text_size_20"
                        android:textColor="@color/default_text_color"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/default_element_margin"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="190dp"
                android:layout_height="250dp"
                app:cardElevation="@dimen/default_card_elevation"
                android:layout_margin="@dimen/default_element_margin"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/card_my_account"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/default_element_margin"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        app:cardElevation="@dimen/default_card_elevation"
                        >
                        <ImageView
                            android:layout_width="170dp"
                            android:layout_height="180dp"
                            android:src="@drawable/twotone_manage_accounts_blue_800_48dp"
                            android:layout_margin="@dimen/default_element_margin"
                            />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_account"
                        android:textSize="@dimen/title_text_size_20"
                        android:textColor="@color/default_text_color"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/default_element_margin"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="190dp"
                android:layout_height="250dp"
                app:cardElevation="@dimen/default_card_elevation"
                android:layout_margin="@dimen/default_element_margin"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/card_my_password"
                android:id="@+id/card_other_settings"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/default_element_margin"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        app:cardElevation="@dimen/default_card_elevation"
                        >
                        <ImageView
                            android:layout_width="170dp"
                            android:layout_height="180dp"
                            android:src="@drawable/twotone_settings_blue_800_48dp"
                            android:layout_margin="@dimen/default_element_margin"
                            />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/other_settings"
                        android:textSize="@dimen/title_text_size_20"
                        android:textColor="@color/default_text_color"
                        android:textStyle="bold|italic"
                        android:layout_margin="@dimen/default_element_margin"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="190dp"
                android:layout_height="250dp"
                app:cardElevation="@dimen/default_card_elevation"
                android:layout_margin="@dimen/default_element_margin"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/card_my_account"
                android:id="@+id/card_about_app"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/default_element_margin"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        app:cardElevation="@dimen/default_card_elevation"
                        >
                        <ImageView
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:src="@drawable/twotone_question_mark_blue_800_48dp"
                            android:layout_margin="@dimen/default_element_margin"
                            />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about"
                        android:textSize="@dimen/title_text_size_20"
                        android:textColor="@color/default_text_color"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/default_element_margin"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>